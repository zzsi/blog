# Control-plane HTTP server
MCP_PORT=3003

# MCP auth mode for /mcp
AUTH_MODE=jwt
AUTH_PROVIDER=shared_secret
JWT_SECRET=replace_with_long_random_secret
JWT_ISSUER=
JWT_AUDIENCE=
OIDC_JWKS_URI=

# Bridge agent auth for /bridge/*
BRIDGE_AGENT_TOKEN=bridge-agent-demo-token

# Job signature key shared by control-plane and bridge agent
JOB_SIGNING_SECRET=job-signing-demo-secret

# Bridge agent runtime
CONTROL_PLANE_URL=http://localhost:3003
BRIDGE_POLL_INTERVAL_MS=2000

# Demo durability mode
STORAGE_MODE=file
BRIDGE_STATE_FILE=.demo-data/bridge_jobs.json
