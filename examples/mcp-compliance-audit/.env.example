# HTTP server
MCP_PORT=3005

# Auth for HTTP transport
AUTH_MODE=jwt
AUTH_PROVIDER=shared_secret
JWT_SECRET=replace_with_long_random_secret
# Optional in shared-secret mode
JWT_ISSUER=
JWT_AUDIENCE=

# For OIDC/JWKS mode
# AUTH_PROVIDER=oidc_jwks
# OIDC_JWKS_URI=https://your-idp.example.com/.well-known/jwks.json
# JWT_ISSUER=https://your-idp.example.com/
# JWT_AUDIENCE=your-mcp-api-audience

# Demo durability mode
STORAGE_MODE=file
COMPLIANCE_EVENTS_FILE=.demo-data/compliance_events.json
