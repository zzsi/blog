# Primary transport configuration
MCP_PORT=3000

# Auth mode: none | jwt
AUTH_MODE=none

# Auth provider for JWT mode: shared_secret | oidc_jwks
AUTH_PROVIDER=shared_secret

# Required when AUTH_MODE=jwt and AUTH_PROVIDER=shared_secret
JWT_SECRET=replace_with_long_random_secret
JWT_ISSUER=
JWT_AUDIENCE=

# Required when AUTH_MODE=jwt and AUTH_PROVIDER=oidc_jwks
OIDC_JWKS_URI=

# Demo durability mode
STORAGE_MODE=file
INVOICES_FILE=.demo-data/invoices.json
